<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.claresti.financeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainDenarius"
            android:label="Denarius"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.Registro" />
        <activity
            android:name=".Movimientos"
            android:label="Modificar Movimiento" />
        <activity
            android:name=".AgregarCategoria"
            android:label="Categoria" />
        <activity
            android:name=".AgregarCuenta"
            android:label="Cuenta" />
        <activity android:name=".Estadisticas" />
        <activity
            android:name=".Activities.Splash"
            android:label="@string/title_activity_splash"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>