<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_border"
    android:padding="0dp"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="25dp"
        android:id="@+id/imgAccount"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="30dp"
        android:id="@+id/img_account_delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="30dp"
        android:src="@drawable/delete"
        android:layout_alignBottom="@id/imgAccount"/>

    <ImageView
        android:layout_width="30dp"
        android:id="@+id/img_account_edit"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@id/img_account_delete"
        android:src="@drawable/edit"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_nameAccount"
        android:paddingLeft="12dp"
        android:textColor="#191919"
        android:text="Nombre de la Cuenta"
        android:layout_alignStart="@+id/txt_moneyAccount"/>
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_toRightOf="@id/imgAccount"
        android:layout_below="@id/txt_nameAccount"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:id="@+id/txt_moneyAccount"
        android:paddingLeft="25dp"
        android:textColor="#191919"
        android:text="Dinero en la Cuenta: $0.0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_toRightOf="@id/imgAccount"
        android:layout_below="@id/txt_moneyAccount"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/txt_descriptionAccount"
        android:paddingLeft="25dp"
        android:textColor="#191919"
        android:text="Descripcion de la Cuenta" />
</RelativeLayout>