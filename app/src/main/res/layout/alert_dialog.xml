<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000">

    <RelativeLayout
        android:id="@+id/ventana_dialog"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        >

        <TextView
            android:id="@+id/alert_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciando SesiÃ³n"
            android:textColor="@color/text_color"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/alert_dialog_mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensaje"
            android:textColor="@color/text_color"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/alert_dialog_title"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/alert_dialog_btn_aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Aceptar"
            android:textColor="@color/hint_color"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <Button
            android:id="@+id/alert_dialog_btn_cencelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/alert_dialog_btn_aceptar"
            android:text="Cancelar"
            android:textColor="@color/hint_color"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

    </RelativeLayout>

</RelativeLayout>