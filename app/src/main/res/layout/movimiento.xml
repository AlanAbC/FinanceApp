<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:minHeight="75dp"
    >

    <include layout="@layout/movimiento_swiped" />

    <RelativeLayout
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:focusable="true"
        >

        <ImageView
            android:id="@+id/tipoMovimiento"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circular_image_view"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tipoMovimiento"
            android:layout_toLeftOf="@+id/layout_fecha"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/txt_MontoMovimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$100000.00"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/txt_ConceptoMovimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Concepto"
                android:textSize="13sp"
                android:textColor="@color/text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_cuentaMovimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="13sp"
                android:textColor="@color/hint_color"
                android:text="Banco"
                />

            <TextView
                android:id="@+id/txt_fechaMovimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="12sp"
                android:textColor="@color/hint_color"
                android:text="DD/MM/AAAA"
                />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_20"
        >
    </LinearLayout>
</RelativeLayout>