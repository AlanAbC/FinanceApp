<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_forms"
        android:layout_marginStart="@dimen/margin_forms"
        android:layout_marginRight="@dimen/margin_forms"
        android:layout_marginEnd="@dimen/margin_forms"
        android:orientation="vertical"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_inputs_forms"
            app:hintTextAppearance="@style/TextLabel"
            >

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:hint="@string/registro_nombre"
                android:inputType="text"
                android:textSize="@dimen/text_size_forms"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_inputs_forms"
            app:hintTextAppearance="@style/TextLabel"
            >

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:hint="@string/registro_correo"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_size_forms"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_inputs_forms"
            app:hintTextAppearance="@style/TextLabel"
            >

            <EditText
                android:id="@+id/input_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:hint="@string/registro_usuario"
                android:inputType="text"
                android:textSize="@dimen/text_size_forms"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_inputs_forms"
            app:hintTextAppearance="@style/TextLabel"
            >

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:hint="@string/registro_pass"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_forms"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_valid_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_inputs_forms"
            app:hintTextAppearance="@style/TextLabel"
            >

            <EditText
                android:id="@+id/input_valid_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:hint="@string/registro_passc"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_forms"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_inputs_forms"
            app:hintTextAppearance="@style/TextLabel"
            >

            <EditText
                android:id="@+id/input_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:hint="@string/registro_fechanac"
                android:inputType="date"
                android:textSize="@dimen/text_size_forms"
                />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/registro_genero"
            android:textSize="15sp"
            android:id="@+id/tv_sex"/>

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton android:id="@+id/radio_masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_forms"
                android:text="@string/registro_genero_masculino"
                android:checked="true"
                android:layout_marginTop="10dp"
                />

            <RadioButton android:id="@+id/radio_femenino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_forms"
                android:layout_marginTop="10dp"
                android:text="@string/registro_genero_femenino"
                />

        </RadioGroup>

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_buttons_submit"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white_color"
            android:background="@drawable/background_buttons_colored"
            android:text="@string/registro_registrar"
            android:textSize="@dimen/text_size_buttons_forms"
            />

    </LinearLayout>

</ScrollView>