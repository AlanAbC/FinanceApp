<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMovimiento">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/l_ventana">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/menu"
                android:id="@+id/contenedor">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/img_verde"
                    android:id="@+id/img_mas"
                    android:src="@drawable/mas"
                    android:padding="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="45dp"/>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/img_transfer"
                    android:padding="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/icon_transfer"
                    android:layout_toRightOf="@id/img_mas"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/img_roja"
                    android:layout_marginLeft="35dp"
                    android:layout_toRightOf="@id/img_transfer"
                    android:id="@+id/img_menos"
                    android:src="@drawable/menos"
                    android:padding="15dp"
                    android:layout_marginTop="45dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textAlignment="center"
                    android:layout_below="@id/img_transfer"
                    android:text="Tipo de movimiento que realizaras"
                    android:textColor="#949494"
                    android:textSize="18sp"
                    android:id="@+id/tv_tipomov"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_concepto"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:hint="Concepto del Monto"
                    android:layout_below="@id/tv_tipomov"
                    android:textColorHint="#949494"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/input_concepto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#949494"
                        android:inputType="text"
                        android:textSize="15sp"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_below="@id/input_layout_concepto"
                    android:text="Categoria"
                    android:textColor="#949494"
                    android:textSize="15sp"
                    android:id="@+id/tv_categoria"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/spin_categoria"
                    android:layout_below="@id/tv_categoria"/>

                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="90dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:textColor="#949494"
                    android:padding="15dp"
                    android:background="#00000000"
                    android:id="@+id/txt_categoria"
                    android:textSize="15sp"
                    android:layout_below="@id/tv_categoria"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Cuenta"
                    android:layout_below="@id/spin_categoria"
                    android:textColor="#949494"
                    android:textSize="15sp"
                    android:id="@+id/tv_cuenta"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/spin_cuenta"
                    android:layout_below="@id/tv_cuenta"/>

                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="90dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:textColor="#949494"
                    android:padding="15dp"
                    android:background="#00000000"
                    android:id="@+id/txt_cuenta"
                    android:textSize="15sp"
                    android:layout_below="@id/tv_cuenta"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Cuenta Destino"
                    android:layout_below="@id/spin_cuenta"
                    android:textColor="#949494"
                    android:textSize="15sp"
                    android:id="@+id/tv_accountTransfer"
                    android:visibility="gone"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/spin_accountTransfer"
                    android:layout_below="@id/tv_accountTransfer"
                    android:visibility="gone"/>

                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="90dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:textColor="#949494"
                    android:padding="15dp"
                    android:background="#00000000"
                    android:id="@+id/txt_accountTransfer"
                    android:textSize="15sp"
                    android:layout_below="@id/tv_accountTransfer"
                    android:visibility="gone"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_monto"
                    android:layout_width="match_parent"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:hint="$Monto"
                    android:layout_below="@id/spin_accountTransfer"
                    android:textColorHint="#949494"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_monto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#949494"
                        android:inputType="numberDecimal"
                        android:textSize="15sp"/>

                </android.support.design.widget.TextInputLayout>

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/calendario"
                    android:id="@+id/calendar"
                    android:layout_marginRight="50dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/calendar"
                    android:layout_marginTop="35dp"
                    android:padding="6dp"
                    android:layout_below="@id/input_layout_monto"
                    android:scaleType="centerInside"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_fecha"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@id/calendar"
                    android:hint="Fecha de registro"
                    android:layout_below="@id/input_layout_monto"
                    android:textColorHint="#949494"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/input_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#949494"
                        android:inputType="text"
                        android:textSize="15sp"/>

                </android.support.design.widget.TextInputLayout>



                <Button
                    android:id="@+id/btn_registrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="25dp"
                    android:background="#216c2a"
                    android:textColor="#fff"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/input_layout_fecha" />

            </RelativeLayout>

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/progress"
                android:indeterminateDrawable="@drawable/custom_progressbar"
                android:visibility="gone"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
